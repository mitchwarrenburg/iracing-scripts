<Application x:Class="iRacingOverlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <tb:TaskbarIcon x:Key="NotifyIcon"
                        IconSource="Resources/icon.ico"
                        ToolTipText="iRacing Overlay"
                        MenuActivation="RightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show Overlay" Click="ShowOverlay_Click" />
                    <MenuItem Header="Hide Overlay" Click="HideOverlay_Click" />
                    <Separator />
                    <MenuItem Header="Start with Windows" Click="StartWithWindows_Click" IsCheckable="True" x:Name="StartupMenuItem" />
                    <MenuItem Header="Settings" Click="Settings_Click" />
                    <Separator />
                    <MenuItem Header="Exit" Click="Exit_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>

